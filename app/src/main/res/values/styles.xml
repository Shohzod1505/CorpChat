<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="boxBackgroundColor">#00FFFFFF</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="errorEnabled">true</item>
        <item name="hintTextColor">@color/primary</item>
    </style>

    <style name="MyTextInputLayoutPassword" parent="MyTextInputLayout">
        <item name="endIconMode">password_toggle</item>
        <item name="endIconTint">@color/primary</item>
    </style>

    <style name="MyTextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>

    <style name="MyButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">36dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/big_label_24</item>
        <item name="android:background">@drawable/shape_radius_32</item>
    </style>

    <style name="MyTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">48dp</item>
        <item name="android:text">@string/auth_title_exist_sign_in</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/title_36</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyCheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/big_label_24</item>
    </style>

    <style name="MyImageButton">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">160dp</item>
        <item name="android:background">@drawable/shape_radius_32</item>
        <item name="android:elevation">8dp</item>
        <item name="android:padding">32dp</item>
    </style>

    <style name="MyImageButtonLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/big_label_24</item>
    </style>

</resources>
